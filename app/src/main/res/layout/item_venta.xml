<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/bg_card_light"
    android:layout_margin="16dp"
    android:elevation="6dp">

    <!-- Cliente -->
    <TextView
        android:id="@+id/clienteVentaTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cliente"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#3D00A0" />

    <!-- Fecha -->
    <TextView
        android:id="@+id/fechaVentaTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="Fecha"
        android:textSize="16sp"
        android:textColor="#0D0D40" />

    <!-- Productos -->
    <TextView
        android:id="@+id/productosVentaTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Productos"
        android:textSize="16sp"
        android:textColor="#555555" />

    <!-- Total -->
    <TextView
        android:id="@+id/totalVentaTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Total"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#009688" />

</LinearLayout>
