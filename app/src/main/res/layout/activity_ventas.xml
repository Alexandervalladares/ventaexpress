<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient">

    <!-- Contenido scrollable -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Selección de Cliente -->
            <Spinner
                android:id="@+id/spinnerClientes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_background"
                android:padding="12dp"
                android:prompt="@string/selecciona_cliente" />

            <!-- Selección de Producto -->
            <Spinner
                android:id="@+id/spinnerProductos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/edittext_background"
                android:padding="12dp"
                android:prompt="@string/selecciona_producto" />

            <!-- Cantidad -->
            <EditText
                android:id="@+id/cantidadEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="@string/hint_cantidad"
                android:inputType="number"
                android:background="@drawable/edittext_background"
                android:padding="12dp"
                android:textColor="@android:color/white"
                android:textColorHint="#DDFFFFFF" />

            <!-- Botón agregar producto -->
            <Button
                android:id="@+id/agregarProdBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/agregar_producto"
                android:textColor="@android:color/white"
                android:background="@drawable/button_outline" />

            <!-- Productos seleccionados -->
            <TextView
                android:id="@+id/productosSeleccionadosTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/sin_productos_seleccionados"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <!-- Botón registrar venta -->
            <Button
                android:id="@+id/registrarVentaBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/registrar_venta"
                android:textColor="@android:color/white"
                android:background="@drawable/button_outline" />

            <!-- Separador -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp"
                android:background="#55FFFFFF" />

            <!-- Historial -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/historial_ventas"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@android:color/white" />

            <!-- Lista de ventas -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/ventasRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="12dp"
                android:clipToPadding="false"
                android:paddingTop="8dp"
                android:paddingBottom="8dp" />
            <Button
                android:id="@+id/volverMenuBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Volver al menú"
                android:layout_marginTop="12dp" />

            <!-- Total generado -->
            <TextView
                android:id="@+id/totalGeneradoTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/total_generado_inicial"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@android:color/white" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
